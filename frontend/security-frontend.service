[Unit]
Description=Security Platform Frontend (Next.js)
After=network.target

[Service]
Type=simple
User=dacon
WorkingDirectory=/home/dacon/project/frontend
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
Environment="NODE_ENV=production"
ExecStart=/home/dacon/project/frontend/node_modules/.bin/next dev -p 4200
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
